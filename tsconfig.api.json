{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": false,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@api/*": ["api/*"],
        "@config/*": ["config/*"],
        "@models/*": ["models/*"]
      }
    },
    "include": [
      "src/api/**/*",
      "src/config/**/*",
      "src/models/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      "src/**/*.tsx"
    ]
  }